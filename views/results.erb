<h2>
  <% if @results.empty? %>
    No search results found 
  <% else %>  
  Search results 
  <% end %>
  for <%= @query %>
</h2>

<%= erb :search_form %>

<ol>
  <% @results.each do |result| %>
    <li>
      <a href="/movies?id=<%= result["imdbID"] %>"><%= result["Title"] %></a>
    </li>
  <% end %>
</ol>